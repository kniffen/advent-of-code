{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "Node",
    "typeRoots": ["./node_modules/@types"],
    "noImplicitAny": true,
    "skipLibCheck": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "sourceMap": true,
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"],
}